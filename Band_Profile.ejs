<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= band.name %> - Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Header -->
    <header class="text-center p-4 bg-dark text-white">
      <h1 class="display-4"><%= band.name %></h1>
      <img
        src="/uploads/images/<%= band.profile_picture || 'default-band.jpg' %>"
        alt="<%= band.name %>"
        class="rounded-circle my-3 border border-white"
        width="150"
        height="150"
      />
      <p class="fs-5"><%= band.description || 'No description available.' %></p>
      <p class="fs-6">Genre: <%= band.genre %></p>
    </header>

    <!-- Band Members Section -->
    <main class="container my-5">
      <section class="text-center">
        <h2 class="display-6 border-bottom pb-2">Band Members</h2>
        <div class="row justify-content-center">
          <% members.forEach(member => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100 text-center shadow">
              <img
                src="/uploads/images/<%= member.profile_picture || 'default-user.jpg' %>"
                class="card-img-top"
                alt="<%= member.name %>"
                height="200"
                style="object-fit: cover;"
              />
              <div class="card-body">
                <h5 class="card-title"><%= member.name %></h5>
                <p class="card-text">Instrument: <%= member.instrument || 'Unknown' %></p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </section>

      <!-- Band Posts Section -->
      <section class="mt-5">
        <h2 class="display-6 border-bottom pb-2 text-center">Band Posts</h2>
        <div class="row justify-content-center">
          <% posts.forEach(post => { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.description || 'No description provided.' %></p>
                <p class="text-muted">Type: <%= post.type %></p>
                <% if (post.file) { %>
                <a href="/uploads/files/<%= post.file %>" class="btn btn-primary" download>Download File</a>
                <% } %>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="container text-center my-4">
      <p>&copy; 2017–2024 Company, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
      <a href="#" class="text-decoration-none">Back to top</a>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
