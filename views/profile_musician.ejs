    <script>
     const API_URL = 'http://localhost:3000'; // Replace with your backend URL

// Function to render stars for ratings
function generateStars(rating) {
  const starsContainer = document.createElement('div');
  starsContainer.className = 'stars-container';

  for (let i = 1; i <= 5; i++) {
    const star = document.createElement('div');
    star.className = 'star';

    if (i <= Math.floor(rating)) {
      star.style.background = 'linear-gradient(to right, gold 100%, #ccc 0%)'; // Full star
    } else if (i - rating <= 0.5) {
      const percentage = Math.round((rating % 1) * 100); // Calculate fractional fill
      star.style.background = `linear-gradient(to right, gold ${percentage}%, #ccc ${percentage}%)`; // Partial star
    } else {
      star.style.background = 'linear-gradient(to right, #ccc 100%, #ccc 0%)'; // Empty star
    }

    starsContainer.appendChild(star);
  }

  return starsContainer.outerHTML; // Return HTML as a string
}



async function fetchReviews(musicianId) {
  try {
    const response = await fetch(`${API_URL}/reviews/${musicianId}`);
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    const data = await response.json();

    if (data.success) {
      const reviewsContainer = document.getElementById('reviewsContainer');
      reviewsContainer.innerHTML = ''; // Clear previous content

      // Create a single card for average rating
      const averageRatingElement = document.createElement('div');
      averageRatingElement.className = 'average-rating-card';
      averageRatingElement.innerHTML = `
        <p>Rating: <span class="stars">${generateStars(data.averageRating)}</span> (${data.averageRating} / 5)</p>
        <p>Total Reviews: ${data.reviewCount}</p>
      `;
      reviewsContainer.appendChild(averageRatingElement);
    }
  } catch (err) {
    console.error('Error fetching reviews:', err.message);
  }
}

// Fetch reviews and average rating on page load
document.addEventListener('DOMContentLoaded', () => {
  const musicianId = document.getElementById('musicianId').value;
  fetchReviews(musicianId);
});

    </script>
