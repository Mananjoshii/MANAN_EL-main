<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= user.role === 'musician' ? 'Musician Dashboard' : 'Band Dashboard' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    .img-thumbnail {
      border-radius: 50px;
    }

    .dashboard-container {
      padding: 20px;
    }

    .profile-section img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 50%;
      margin-bottom: 15px;
    }

    .card {
      margin-bottom: 20px;
      border-radius: 20px;
    }

    .list-group-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    footer {
      background-color: black;
      color: white;
      text-align: center;
      padding: 20px;
    }

    /* Specific Styles for Musician */
    .professional.details, .list-group {
      list-style-type: none;
      padding: 0;
      margin: 20px 0;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .professional.details li, .list-group-item {
      padding: 15px;
      border-bottom: 1px solid #ddd;
      font-family: Arial, sans-serif;
      font-size: 16px;
      color: #333;
    }

    .professional.details li:last-child, .list-group-item:last-child {
      border-bottom: none;
    }

    .professional.details li:hover, .list-group-item:hover {
      background-color: #eef6ff;
      cursor: pointer;
    }

    /* Band-Specific Styles */
    .band-members img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 50%;
      margin-right: 10px;
    }
  </style>
</head>

<body>
  <!-- Header Section -->
  <header class="p-3 mb-3 border-bottom" style="background-color: black; color: white;">
    <div class="container">
      <span class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <img src="/SEMITONE_LOGO.gif" alt="MusicHub Logo" width="200">
        </a>
      </span>
      <a href="/logout" class="btn btn-danger" style="margin-left: 93%;">Logout</a>
    </div>
  </header>
  <!-- Dashboard Section -->
  <div class="dashboard-container container">
    <% if (user.role === 'musician') { %>
      <!-- Musician Dashboard -->
      <div class="row">
        <!-- Profile Section -->
        <div class="col-lg-3 col-md-4 mb-4">
          <div class="card text-center">
            <div class="card-body">
              <img src="/uploads/images/<%= user.profile_picture %>" alt="Profile Picture" class="img-thumbnail mb-3">
              <h5 class="card-title">
                <%= user.name %>
              </h5>
              <p class="text-muted mb-3">Musician | <%= user.instrument %></p>
            </div>
          </div>
        </div>

        <!-- Main Content Section -->
        <div class="col-lg-6 col-md-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">User Information:</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong>
                  <%= user.email %>
                </li>
              </ul>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Professional Details:</h5>
              <ul class="professional details">
                <%= user.description %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <section class="container my-4">
        <h2 class="mb-4">User Posts</h2>
        <div class="row g-3">
          <div class="col-md-4">
            <div class="card">
              <video src="/uploads/videos/<%= user.video %>" controls></video>
              <div class="card-body">
                <h5 class="card-title">Sample Title</h5>
                <p class="card-text">Sample Description</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% } else if (user.role === 'band_member') { %>
      <!-- Band Member Dashboard -->
      <h1>BAND PROFILE PAGE</h1>
      <div class="row">
        <!-- Band Profile Section -->
        <div class="col-lg-3 col-md-4 mb-4">
          <div class="card text-center">
            <div class="card-body">
              <img src="/uploads/images/<%= band.profile_picture %>" alt="Band Profile Picture" class="img-thumbnail mb-3">
              <h5 class="card-title">
                <%= band.name %>
              </h5>
              <p class="text-muted mb-3"><%= band.genre %></p>
            </div>
          </div>
        </div>

        <!-- Main Content Section -->
        <div class="col-lg-6 col-md-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Band Information:</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong>
                  <%= band.email %>
                </li>
                <li class="list-group-item"><strong>About:</strong>
                  <%= band.description %>
                </li>
              </ul>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Band Members:</h5>
              <ul class="list-group band-members">
                <% band.members.forEach(member => { %>
                  <li class="list-group-item">
                    <div>
                      <img src="/uploads/images/<%= member.profile_picture %>" alt="Member Picture">
                      <strong><%= member.name %></strong> - <%= member.instrument %>
                    </div>
                    <a href="/profile/<%= member.id %>" class="btn btn-outline-primary btn-sm">View Profile</a>
                  </li>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <section class="container my-4">
        <h2 class="mb-4">Band Posts</h2>
        <div class="row g-3">
          <% band.posts.forEach(post => { %>
            <div class="col-md-4">
              <div class="card">
                <% if (post.type === 'video') { %>
                  <video src="/uploads/videos/<%= post.file %>" controls></video>
                <% } else if (post.type === 'audio') { %>
                  <audio src="/uploads/audio/<%= post.file %>" controls></audio>
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text"><%= post.description %></p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %>
  </div>

  <!-- Footer Section -->
  <footer>
    <p>Â© 2024 MusicHub. All Rights Reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
