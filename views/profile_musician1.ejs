<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= user.role === 'musician' ? 'Musician Profile' : user.role === 'band_member' ? 'Band Member Profile' : 'Event Organizer Profile' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="p-3 mb-3 border-bottom bg-dark text-white">
    <div class="container">
      <h1>Welcome <%= user.name %></h1>
    </div>
  </header>

  <div class="container">
    <% if (user.role === "musician") { %>
      <!-- Musician Profile -->
      <h2>Musician Profile</h2>
      <p><strong>Name:</strong> <%= user.name %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Description:</strong> <%= user.description %></p>
    <% } else if (user.role === "band_member") { %>
      <!-- Band Member Profile -->
      <h2>Band Member Profile</h2>
      <p><strong>Name:</strong> <%= user.name %></p>
      <p><strong>Band:</strong> <%= band.name %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
    <%}%>
  </div>
</body>
</html>
