<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= band.name %> - Profile</title>
    <style>
        /* styles.css */

/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
    color: #333;
}

header {
    text-align: center;
    padding: 20px;
    background-color: #212529;
    color: #fff;
}

header h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
}

header img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #fff;
    margin: 15px 0;
}

header p {
    font-size: 1.2rem;
    margin: 5px 0;
}

/* Sections */
section {
    padding: 20px;
    margin: 20px auto;
    max-width: 1200px;
}

section h2 {
    font-size: 2rem;
    margin-bottom: 15px;
    color: #212529;
    border-bottom: 2px solid #ddd;
    display: inline-block;
}

/* Band Members Section */
.members {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.member-card {
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 250px;
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
}

.member-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.member-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.member-card h3 {
    font-size: 1.5rem;
    margin: 15px 0 5px;
    color: #212529;
}

.member-card p {
    font-size: 1rem;
    color: #666;
    margin-bottom: 15px;
}

/* Band Posts Section */
.posts {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.post-card {
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: 300px;
    text-align: left;
    transition: transform 0.3s, box-shadow 0.3s;
}

.post-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.post-card h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
    color: #212529;
}

.post-card p {
    font-size: 1rem;
    margin-bottom: 10px;
    color: #666;
}

.post-card a {
    display: inline-block;
    padding: 10px 15px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    font-size: 1rem;
    transition: background-color 0.3s;
}

.post-card a:hover {
    background-color: #0056b3;
}

/* Responsive Design */
@media (max-width: 768px) {
    .members, .posts {
        flex-direction: column;
        align-items: center;
    }

    .member-card, .post-card {
        width: 90%;
    }

    header h1 {
        font-size: 2rem;
    }

    header img {
        width: 120px;
        height: 120px;
    }
}

    </style>
</head>
<body>
    <header>
        <h1><%= band.name %></h1>
        <img src="/uploads/images/<%= band.profile_picture || 'default-band.jpg' %>" alt="<%= band.name %>">
        <p><%= band.description || 'No description available.' %></p>
        <p>Genre: <%= band.genre %></p>
    </header>

    <section>
        <h2>Band Members</h2>
        <div class="members">
            <% members.forEach(member => { %>
                <div class="member-card">
                    <img src="/uploads/images/<%= member.profile_picture || 'default-user.jpg' %>" alt="<%= member.name %>">
                    <h3><%= member.name %></h3>
                    <p>Instrument: <%= member.instrument || 'Unknown' %></p>
                </div>
            <% }); %>
        </div>
    </section>

    <section>
        <h2>Band Posts</h2>
        <div class="posts">
            <% posts.forEach(post => { %>
                <div class="post-card">
                    <h3><%= post.title %></h3>
                    <p><%= post.description || 'No description provided.' %></p>
                    <p>Type: <%= post.type %></p>
                    <% if (post.file) { %>
                        <a href="/uploads/files/<%= post.file %>" download>Download File</a>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </section>
</body>
</html>
