<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        Band dashboard
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .info-section {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .info-card {
            flex: 1;
            margin-right: 10px;
        }

        .connect-card {
            flex: 0.5;
            margin-left: 10px;
        }


        .reviews {
            margin-top: 40px;
        }

        .reviews h2 {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }

        .review {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .review-header h5 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .review-header .rating {
            display: flex;
            align-items: center;
        }

        .review-header .rating span {
            color: #FFD700;
            font-size: 18px;
            margin-left: 5px;
        }

        .review-body p {
            margin-top: 10px;
            font-size: 16px;
            color: #555;
        }

        .review-body p strong {
            color: #333;
        }

        /* Responsive Design for Review Cards */
        @media (max-width: 768px) {
            .review {
                padding: 15px;
            }

            .review-header h5 {
                font-size: 16px;
            }

            .review-body p {
                font-size: 14px;
            }
        }

        .img-thumbnail {
            border-radius: 50px;
        }

        .dashboard-container {
            padding: 20px;
        }

        .profile-section img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 15px;
        }

        .card {
            margin-bottom: 20px;
            border-radius: 20px;
        }

        .list-group-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        footer {
            background-color: black;
            color: white;
            text-align: center;
            padding: 20px;
        }

        .professional.details,
        .list-group {
            list-style-type: none;
            padding: 0;
            margin: 20px 0;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .professional.details li,
        .list-group-item {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            font-family: Arial, sans-serif;
            font-size: 16px;
            color: #333;
        }

        .professional.details li:last-child,
        .list-group-item:last-child {
            border-bottom: none;
        }

        .professional.details li:hover,
        .list-group-item:hover {
            background-color: #eef6ff;
            cursor: pointer;
        }

        .band-members img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 50%;
            margin-right: 10px;
        }
    </style>

</head>

<body>
    <header class="p-3 mb-3 border-bottom" style="background-color: black; color: white;">
        <div class="container">
            <span class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="/SEMITONE_LOGO.gif" alt="MusicHub Logo" width="200">
                </a>
            </span>
            <a href="/logout" class="btn btn-danger" style="margin-left: 93%;">Logout</a>
        </div>
    </header>

    <main>

        <div class="dashboard-container container">
            <div class="row">
                <div class="col-lg-3 col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h1 class="display-4">
                                <%= band.name %>
                            </h1>
                            <img src="/uploads/images/<%= band.profile_picture || 'default-band.jpg' %>"
                                alt="<%= band.name %>" alt="<%= band.name %>" class="img-thumbnail mb-3">

                            <p class="text-muted mb-3">Musician | <%= band.description || 'No description available.' %>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Main Content Section -->
                <div class="col-lg-6 col-md-8">
                    <div class="info-section">
                        <!-- Band Information -->
                        <div class="card info-card">
                            <div class="card-body">
                                <h5 class="card-title">Band Information:</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><strong>Email:</strong>
                                        <%= band.email %>
                                    </li>
                                    <li class="list-group-item"><strong>Location:</strong> Bengaluru</li>
                                    <li class="list-group-item"><strong>Founded:</strong> 2024</li>
                                </ul>
                            </div>
                        </div>
                        <!-- Connect with Us -->
                        <div class="card connect-card">
                            <div class="card-body">
                                <h5 class="card-title">Connect with Us:</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><a href="https://facebook.com/therockers"
                                            target="_blank">Facebook</a></li>
                                    <li class="list-group-item"><a href="https://instagram.com/therockers"
                                            target="_blank">Instagram</a></li>
                                    <li class="list-group-item"><a href="https://twitter.com/therockers"
                                            target="_blank">Twitter</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Band Members:</h5>
                            <ul class="list-group">
                                <!-- Dynamic content will be inserted here -->
                            </ul>
                        </div>
                    </div>


                </div>
            </div>
            <section class="container my-4">
                <h2 class="mb-4">Band Posts</h2>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card">
                            <video src="/uploads/videos/<%= band.video %>" controls></video>
                            <div class="card-body">
                                <h5 class="card-title">Sample Title</h5>
                                <p class="card-text">Sample Description</p>
                            </div>
                        </div>
                    </div>
                </div>

        </div>

        <!-- Footer -->
        <footer class="container">
            <p class="float-end"><a href="#">Back to top</a></p>
            <p>&copy; 2017–2024 Band, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
        </footer>
    </main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
            document.addEventListener("DOMContentLoaded", () => {
                const bandId = 1; // Replace with the actual band_id dynamically if available

                fetch(`/api/band/${bandId}/members`)
                    .then(response => response.json())
                    .then(members => {
                        const membersList = document.querySelector(".list-group");
                        membersList.innerHTML = ""; // Clear existing static members

                        members.forEach(member => {
                            const memberItem = document.createElement("li");
                            memberItem.className = "list-group-item";

                            memberItem.innerHTML = `
                                <div class="d-flex align-items-center">
                                    <img src="${member.profile_picture || '/uploads/images/default-musician.jpg'}" alt="${member.name}" class="band-members">
                                    <div>
                                        <h6>${member.name}</h6>
                                        <p><strong>Instrument:</strong> ${member.instrument}</p>
                                    </div>
                                </div>
                            `;

                            membersList.appendChild(memberItem);
                        });
                    })
                    .catch(error => console.error('Error fetching band members:', error));
            });
        </script>

</body>

</html>