<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Search Results</h1>
        <% if (message) { %>
            <p class="text-danger"><%= message %></p>
        <% } else { %>
            <div class="row">
                <% profiles.forEach(profile => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="/uploads/images/<%= profile.profile_picture || 'default-musician.jpg' %>" 
                                 class="card-img-top" alt="<%= profile.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= profile.name %></h5>
                                <p class="card-text"><strong>Genre:</strong> <%= profile.genre || 'Unknown' %></p>
                                <p class="card-text"><%= profile.bio || 'No bio available.' %></p>
                                <% if (profile.role === 'band_member') { %>
                                    <a href="/band/<%= profile.id %>" class="btn btn-primary">View Band</a>
                                <% } else { %>
                                    <a href="/profile/<%= profile.id %>" class="btn btn-primary">View Profile</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>
