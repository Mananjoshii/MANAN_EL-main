<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= artist.name %>'s Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container my-5">
      <div class="text-center">
        <img src="/uploads/images/<%= artist.profile_picture || 'default-artist.jpg' %>" class="rounded-circle mb-3" alt="<%= artist.name %>" width="150" height="150">
        <h1><%= artist.name %></h1>
        <p><%= artist.description || 'No description available.' %></p>
      </div>

      <!-- Additional Artist Details -->
      <div class="mt-4">
        <h3>About</h3>
        <p><%= artist.bio || 'No additional information available.' %></p>
      </div>
    </div>
  </body>
</html>
